<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="password_confirmation_view" model="ir.ui.view">
            <field name="name">Confirm Access</field>
            <field name="model">password.confirmation</field>
            <field name="arch" type="xml">
                <form string="Unreconcile">
                    <p>Confirm login details in order to validate the
                        quality alert.
                    </p>
                    <group>
                        <field name="user_login" readonly="1"/>
                        <field name="user_password" password="True"/>
                    </group>
                    <footer>
                        <button string="Validate" name="action_validate"
                                type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_password_confirmation"
                model="ir.actions.act_window">
            <field name="name">Confirm Access</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">password.confirmation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="password_confirmation_view"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
